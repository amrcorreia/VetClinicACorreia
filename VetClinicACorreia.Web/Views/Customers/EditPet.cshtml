@model VetClinicACorreia.Web.Models.PetViewModel

<section>
    <div style="margin:auto; width:800px; height:300px">
        <br />
        <br />
        <br />

        <h4>Edit Pet</h4>
        <hr />
        <form asp-action="EditPet" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <input type="hidden" asp-for="CustomerId" />
            <div class="card-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <div class="col-md-4">
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:200%;height:200%;max-width: 200%; height: auto;" />}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="ImageFile" class="control-label"></label>
                                <input asp-for="ImageFile" class="form-control" type="file" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="PetTypeId" class="control-label"></label>
                                <select asp-for="PetTypeId" asp-items="Model.PetTypes" class="form-control"></select>
                                <span asp-validation-for="PetTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Race" class="control-label"></label>
                                <input asp-for="Race" class="form-control" />
                                <span asp-validation-for="Race" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Born" class="control-label"></label>
                                <input asp-for="Born" class="form-control" type="date"/>
                                <span asp-validation-for="Born" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="Remarks" class="control-label"></label>
                                <textarea asp-for="Remarks" class="form-control"></textarea>
                                <span asp-validation-for="Remarks" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <br />
                            <input type="submit" value="Create" class="btn btn-success" />
                        </div>
                        <div class="form-group">
                            <br />
                            <a asp-action="Details" asp-route-id="@Model.CustomerId" class="btn btn-primary">Back to Customer</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="text-success">
        <p>
            @ViewBag.Message
        </p>
    </div>
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}