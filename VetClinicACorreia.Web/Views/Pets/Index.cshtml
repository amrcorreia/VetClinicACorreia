@model IEnumerable<VetClinicACorreia.Web.Data.Entities.Pet>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<body class="hold-transition sidebar-mini">
    <section style="margin-left: 90px; margin-right: 10px;">
        <div class="wrapper">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Pets</h3>
                            <p>
                                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
                            </p>
                        </div>
                        <div class="panel-boby">
                            <table class="table table-hover table-responsive table-striped" id="MyTable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Chip)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ChipDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ImageUrl)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Specie)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Sterilized)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.BirthDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Observations)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Chip)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChipDate)
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src=" @Url.Content(item.ImageUrl)" alt="Image" style="width:100px;height:150px;max-height:100%;height:auto" />}
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Specie)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sterilized)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BirthDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Observations)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-pen"></i></a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-list-ol"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>

                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

@section Scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });

    </script>
}

