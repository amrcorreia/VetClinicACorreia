<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] Your Vet </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <environment include="Development">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700, 900|Vollkorn:400i" rel="stylesheet">
        <link rel="stylesheet" href="~/frontend/fonts/icomoon/style.css">

        <link rel="stylesheet" href="~/frontend/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/frontend/css/jquery-ui.css">
        <link rel="stylesheet" href="~/frontend/css/owl.carousel.min.css">
        <link rel="stylesheet" href="~/frontend/css/owl.theme.default.min.css">
        <link rel="stylesheet" href="~/frontend/css/owl.theme.default.min.css">

        <link rel="stylesheet" href="~/frontend/css/jquery.fancybox.min.css">
        <link rel="stylesheet" href="~/frontend/css/bootstrap-datepicker.css">
        <link rel="stylesheet" href="~/frontend/fonts/flaticon/font/flaticon.css">
        <link rel="stylesheet" href="~/frontend/css/aos.css">
        <link rel="stylesheet" href="~/frontend/css/style.css">
    </environment>
    <environment exclude="Development">
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700, 900|Vollkorn:400i" rel="stylesheet">
        <link rel="stylesheet" href="~/frontend/fonts/icomoon/style.css" />

        <link rel="stylesheet" href="~/frontend/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/frontend/css/jquery-ui.css">
        <link rel="stylesheet" href="~/frontend/css/owl.carousel.min.css">
        <link rel="stylesheet" href="~/frontend/css/owl.theme.default.min.css">
        <link rel="stylesheet" href="~/frontend/css/owl.theme.default.min.css">
        <link rel="stylesheet" href="~/frontend/css/jquery.fancybox.min.css">
        <link rel="stylesheet" href="~/frontend/css/bootstrap-datepicker.css">
        <link rel="stylesheet" href="~/frontend/fonts/flaticon/font/flaticon.css">
        <link rel="stylesheet" href="~/frontend/css/aos.css">
        <link rel="stylesheet" href="~/frontend/css/style.css">
    </environment>
    <style>
        /*============================
               Not Authorized page
        ==============================*/

        .page_404 {
            padding: 40px 0;
            background: #fff;
            font-family: 'Arvo', serif;
        }

            .page_404 img {
                width: 100%;
            }

        .four_zero_four_bg {
            background-image: url(https://media2.giphy.com/media/l0K4apzqsMv8K4jSw/giphy.gif);
            background-repeat: no-repeat;
            height: 400px;
            background-position: center;
        }

            .four_zero_four_bg h1 {
                font-size: 80px;
            }

            .four_zero_four_bg h3 {
                font-size: 80px;
            }

        .link_404 {
            color: #fff !important;
            padding: 10px 20px;
            background: #39ac31;
            margin: 20px 0;
            display: inline-block;
        }

        .contant_box_404 {
            margin-top: -50px;
        }
    </style>
</head>
<body>
    <section class="page_404">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 ">
                    <div class="col-sm-10 col-sm-offset-1  text-center">
                        <br />
                        <br />
                        <h1 class="text-center ">
                            <br />
                            <br />
                            Not Authorized
                        </h1>
                        <div class="four_zero_four_bg">

                        </div>

                        <div class="contant_box_404">

                        </div>
                        <h3 class="h2">
                            You are <strong>not authorized</strong> to perform this action!
                        </h3>
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="link_404">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
</html>
