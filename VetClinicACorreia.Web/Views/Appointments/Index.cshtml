@model IEnumerable<VetClinicACorreia.Web.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Index";
}


<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

</head>
<body class="hold-transition sidebar-mini">
    <section style="margin-left: 90px; margin-right: 10px;">
        <div class="wrapper">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Customers</h3>
                            <p>
                                <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Create New</a>
                            </p>
                        </div>
                        <div class="panel-boby">
                            <table class="table table-hover table-responsive table-striped" id="MyTable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CustomerId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PetId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DoctorId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AppointmentDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AppointmentHour)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AppointmentObservations)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustomerId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PetId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DoctorId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppointmentDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppointmentHour)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppointmentObservations)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fas fa-pen"></i></a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-list-ol"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section Scripts{
        <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript">
                $(document).ready(function () {
                    $('#MyTable').DataTable();
                });

        </script>
    }
</body>
</html>
